{
  "name": "nextjs-ecommerce-2024",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "yarn type-check && yarn lint",
    "OFF prisma:reset & seed": "yarn prisma format && yarn prisma validate && yarn prisma migrate reset --skip-seed && yarn prisma generate && yarn prisma db push && yarn prisma db seed",
    "prisma:reset": "yarn prisma format && yarn prisma validate && yarn prisma migrate reset --skip-seed && yarn prisma generate && yarn prisma db push",
    "prisma:seed": "yarn prisma db seed && yarn prisma db push",
    "update": "yarn upgrade-interactive --latest && yarn validate && echo 'TODO: Add Prisma to validation.'",
    "update:shadcn-ui": "for file in ./src/components/ui/*.tsx; do npx shadcn-ui@0.8.0 add -y -o $(basename \"$file\" .tsx); echo $(basename \"$file\"); done && yarn validate",
    "undocommit": "git reset --soft HEAD~"
  },
